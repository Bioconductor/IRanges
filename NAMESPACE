useDynLib(IRanges)

import(methods)
import(stats) ## for the "start", "end" and "update" generics

exportClasses(
    IRanges, UnlockedIRanges, LockedIRanges, NormalIRanges,
    MaskCollection,
    SequencePtr, RawPtr, IntegerPtr, NumericPtr,
    XSequence, XRaw, XInteger, XNumeric,
    Views, XIntegerViews
)

export(
    ## Non-generic functions:
    setValidity2, new2,
    sapplyLength,
    safeExplode,
    IRanges,
    asNormalIRanges,
    intToRanges,
    successiveIRanges,
    intToAdjacentRanges,
    whichAsRanges,
    toNormalIRanges,
    summaryIRangesList,
    MaskCollection.show_frame,
    Mask,
    read.gapMask,
    read.agpMask,
    read.liftMask,
    read.rmMask,
    read.trfMask,
    RawPtr, RawPtr.readInts, RawPtr.writeInts, RawPtr.read, RawPtr.write,
    RawPtr.copy, RawPtr.reverseCopy, RawPtr.readComplexes, RawPtr.append,
    RawPtr.compare,
    #IntegerPtr, IntegerPtr.read, IntegerPtr.write,
    #NumericPtr, NumericPtr.read, NumericPtr.write,
    XInteger, XNumeric,
    successiveViews,

    ## Generic functions:
    width,
    isNormal,
    whichFirstNotNormal,
    isEmpty,
    "start<-",
    "width<-",
    "end<-",
    shift,
    restrict,
    narrow,
    reduce,
    gaps,
    reverse,
    coverage,
    nir_list,
    active, "active<-",
    maskedwidth, maskedratio,
    subseq,
    subject, Views, subviews, trim,
    slice,
    viewMins, viewMaxs, viewSums,

    ## Aliases:
    desc, "desc<-",

    ## Deprecated functions:
    first, last, views
)

exportMethods(
    ## Methods for generics defined elsewhere:
    coerce,
    show,
    length,
    names, "names<-",
    "[", "[<-",
    duplicated,
    rep,
    start,
    end,
    max,
    min,
    as.integer,
    as.data.frame,
    as.matrix,
    toString,
    update,
    append,
    "==", "!=",

    ## Methods for generics defined in this package:
    width,
    isNormal,
    whichFirstNotNormal,
    isEmpty,
    "start<-",
    "width<-",
    "end<-",
    shift,
    restrict,
    narrow,

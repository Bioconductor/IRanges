)

export(
    newEmptyNormalIRanges,
    IRanges,
    asNormalIRanges,
    intToRanges,
    intToAdjacentRanges,
    whichAsRanges,
    slice,
    shift,
    restrict,
    narrow,
    reduce,
    toNormalIRanges,
    gaps,
    summaryIRangesList,

    ## Aliases
    desc, "desc<-"
)

exportMethods(
    length,
    start,
    width,
    end,
    names,
    isNormal,
    whichFirstNotNormal,
    isEmpty,
    max,
    min,
    initialize,
    coerce,
    as.data.frame,
    show,
    "start<-",
    "width<-",
    "end<-",
    update,
    "[",
    rep,
    duplicated,
    as.matrix,

    ## Deprecated
    first, last
)

